<div class="table-responsive data-table-div">
A  <table
      id="<%= table_id %>"
      class="table <%= ' data-table' if records.count > 1 %> thead-dark table-striped"
      data-show-search-clear-button="true"
  >
    <thead class="thead-dark">
      <tr>
      <% column_headings.each do |heading| %>
        <th><%= heading %></th>
      <% end %>
      </tr>
    </thead>
    <tbody>
      <% records.each do |record| %>
        <tr>
        <% record.each do |field_value| %>
          <td><%= field_value %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
