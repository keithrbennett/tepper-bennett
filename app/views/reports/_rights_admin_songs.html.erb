<% records.each do |org| %>
  <% name = org[:name] %>
  <% songs = org[:songs].pluck(:code, :name) %>
  <section>
    <h2><%= name %></h2>
    <% if songs.empty? %>
      <p><%= "[No songs for this organization]" %></p>
    <% else %>
      <% locals = { table_id: "rights-admin-songs-#{org[:code]}-report-table", column_headings: ['Song Code', 'Song Name'], records: songs } %>
      <p><%= render partial: 'reports/report_table', locals: locals %></p><br/><br/>
    <% end %>
    <br/><br />
  </section>
<% end %>


