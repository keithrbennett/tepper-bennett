<div id="rpt-card" class="card rpt-card" style="background-color: unset">
</div>
<%#= inspect(local_assigns) %>
  <div>
    <div class="container">
      <div class="row mb-4">
        <div class="btn-group" role="group" aria-label="Report">
          <button type="button" class="btn btn-primary mr-2 mt-2 mb-2" id="rpt-back-button" alt="Back to Reports Menu" data-toggle="tooltip" data-placement="top" title="Back to Reports Menu">Back</button>


          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <a href="#" class="btn btn-primary dropdown-toggle mr-2 mt-2 mb-2" type="button" data-toggle="dropdown">Format</a>
              <div class="dropdown-menu p-2 border-dark">

                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="html-rpt-format" name="defaultExampleRadios" checked>
                  <label class="custom-control-label" for="html-rpt-format">HTML</label>
                </div>

                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="text-rpt-format" name="defaultExampleRadios">
                  <label class="custom-control-label" for="text-rpt-format">Text</label>
                </div>

                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="json-rpt-format" name="defaultExampleRadios">
                  <label class="custom-control-label" for="json-rpt-format">JSON</label>
                </div>

                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="yaml-rpt-format" name="defaultExampleRadios">
                  <label class="custom-control-label" for="yaml-rpt-format">YAML</label>
                </div>

                <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="ap-rpt-format" name="defaultExampleRadios">
                  <label class="custom-control-label" for="ap-rpt-format">AP</label>
                </div>
              </div>
            </li>
          </ul>



          <button id="rpt-copy-button" class="btn btn-primary rpt-header-item" alt="Copy to clipboard" data-toggle="tooltip" data-placement="top" title="Copy to clipboard">
            Copy
          </button>
        </div>
      </div>

      <div class="row">

<!--      <div class="container no-horiz-padding">-->
        <div class="tab-content" id="<%= content_tab_id %>">
          <%= render partial: 'reports/report_format_nav_content', locals: local_assigns.merge( { rpt_type: rpt_type, rpt_format: 'html', internal_name: rpt_type + '_html', active: target_rpt_format == 'html' } ) %>
          <%= render partial: 'reports/report_format_nav_content', locals: local_assigns.merge( { rpt_type: rpt_type, rpt_format: 'text', internal_name: rpt_type + '_text', active: target_rpt_format == 'text' } ) %>
          <%= render partial: 'reports/report_format_nav_content', locals: local_assigns.merge( { rpt_type: rpt_type, rpt_format: 'json', internal_name: rpt_type + '_json', active: target_rpt_format == 'json' } ) %>
          <%= render partial: 'reports/report_format_nav_content', locals: local_assigns.merge( { rpt_type: rpt_type, rpt_format: 'yaml', internal_name: rpt_type + '_yaml', active: target_rpt_format == 'yaml' } ) %>
          <%= render partial: 'reports/report_format_nav_content', locals: local_assigns.merge( { rpt_type: rpt_type, rpt_format: 'ap',   internal_name: rpt_type + '_ap',   active: target_rpt_format == 'ap'   } ) %>
        </div>
    </div>
  </div>
</div>
