<div class="card" style="background-color: unset">
  <div class="card-header" id="<%= card_button_id %>">
    <h1 class="mb-0">
      <button class="btn btn-link collapsed accordion-btn-text" data-toggle="collapse" data-target="#<%= card_content_id %>" aria-expanded="false" aria-controls="<%= card_content_id %>">
        <%= report_title %>
      </button>
    </h1>
  </div>

  <div id="<%= card_content_id %>" class="collapse" aria-labelledby="<%= card_button_id %>" data-parent="#accordion">
    <div class="card-body">
      <%= report_text %>
    </div>
  </div>
</div>
